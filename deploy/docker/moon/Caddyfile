http://h3c-helper.synex.im {
    # 仅提供 HTTP 服务，监听 80 端口 (由 docker-compose 映射)

    # 压缩响应 (可选)
    encode gzip zstd

    # API 后端 (palace 服务)
    # 确保 palace 服务在 docker 网络中可以通过 palace:8000 访问
    handle_path /api/* {
        reverse_proxy palace:8000
    }

    # 前端应用
    # 确保 web 服务在 docker 网络中可以通过 web:80 访问
    handle {
        reverse_proxy web:80
    }

    # 日志配置 (可选)
    log {
        output stdout
        format console
    }
}